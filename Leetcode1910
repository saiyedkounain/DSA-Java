class Solution {
    public String removeOccurrences(String s, String part) {
        StringBuilder sb = new StringBuilder();
        int n = s.length();
        int m = part.length();

        for(int i=0;i<n;i++){
            sb.append(s.charAt(i));
            if(sb.length() >= m){
                String sub = sb.substring(sb.length() - m); // last m chars of the sb
                if(sub.equals(part)){
                    //remove the part by reducing len by len of the part(m)
                    sb.setLength(sb.length() - m);
                }
            }
        }

        return sb.toString();
    }
}
